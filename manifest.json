{
    "manifest_version": 3,
    "name": "Image Viewer",
    "description": "View images on right-click",
    "version": "1.0",
    "permissions": ["contextMenus", "storage", "tabs"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "<all_urls>"
    ]
  }
  